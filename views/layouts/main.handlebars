<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>
      Dashboard
    </title>

    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Mukta:wght@200;500;700&family=Space+Grotesk:wght@300;400&display=swap'
      rel='stylesheet'
    />

    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />

    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='d-flex flex-column justify-space-between'>
      <header class='d-flex justify-content-between p-2'>
        <h1>
          <a id='header-links' href='/'>
            Bloggy
           </a>
          <span>
            <h3 class ="header-box">
              <i>
                The Tech Blog!
              </i>
            </h3>
          </span>
        </h1>
          <br />
        </h1>

        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a id='header-links' href='/'>
              Home
            </a>
            <a id='header-links' href='/profile'>
              Dashboard
            </a>
            |
            <span id='logout'>
              <a id='header-links' id='logout'>
                logout
              </a>
            </span>
          {{else}}
            <a id='header-links' href='/login'>
              login
            </a>
          {{/if}}
        </nav>
      </header>

      <main class='container container-fluid mt-5 w-100'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>

      <footer>
        Made with ❤
        <br />
        © 2023 Salma Loum
      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='./js/logout.js'></script>
    {{/if}}
  </body>

  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN'
    crossorigin='anonymous'
  ></script>

</html>

